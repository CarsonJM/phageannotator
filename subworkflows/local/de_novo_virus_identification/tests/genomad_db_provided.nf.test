nextflow_workflow {

    name "Test Workflow main.nf"
    script "subworkflows/local/de_novo_virus_identification/main.nf"
    workflow "DE_NOVO_VIRUS_IDENTIFICATION"
    tag "subworkflows_local"
    tag "de_novo_virus_identification"
    tag "genomad_db_provided"


    test("genomad_db provided") {

        when {
            params {
                outdir      = "$outputDir"
                genomad_db  = "/gscratch/pedslabs_hoffman/resources/genomad_db"
            }
            workflow {
                """
                input[0] = [ [ id:'test1' ], file('https://github.com/nf-core/test-datasets/raw/modules/data/genomics/prokaryotes/bacteroides_fragilis/illumina/fasta/test1.contigs.fa.gz', checkIfExists: true)]
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert workflow.trace.succeeded().size() == 1 },
                { assert snapshot(path("$outputDir/DeNovoIdentification/genomad/endtoend/test1.contigs_summary/test1.contigs_virus.fna")).match("genomad_end_to_end") }
            )
        }
    }
}
