nextflow_workflow {

    name "Test Subworkflow: FASTA_ALL_V_ALL_BLAST"
    script "subworkflows/local/fasta_all_v_all_blast/main.nf"
    workflow "FASTA_ALL_V_ALL_BLAST"


    test("fasta.gz") {
        when {
            workflow {
                """
                input[0] = Channel.of(
                    [
                        [ id:'test' ],
                        file("$projectDir/assets/test-datasets/fastas/MEGAHIT-BUFF_01_B.contigs.fa.gz", checkIfExists: true)
                    ]
                )
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert snapshot(workflow.out).match() }
            )
        }
    }
}
