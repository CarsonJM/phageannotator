nextflow_workflow {

    name "Test Workflow main.nf"
    script "subworkflows/local/de_novo_virus_identification/main.nf"
    workflow "DE_NOVO_VIRUS_IDENTIFICATION"
    tag "subworkflows_local"
    tag "de_novo_virus_identification"
    tag "full_de_novo_virus_identification"


    test("Full de_novo_virus_identification subworkflow") {

        when {
            params {
                outdir              = "$outputDir"
            }
            workflow {
                """
                input[0] = [ [ id:'test1' ], file('https://github.com/nf-core/test-datasets/raw/modules/data/genomics/prokaryotes/bacteroides_fragilis/illumina/fasta/test1.contigs.fa.gz', checkIfExists: true)]
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert workflow.trace.succeeded().size() == 2 },
                { assert snapshot(path("$outputDir/DeNovoIdentification/genomad/genomad_db/").list()).match("genomad_download") },
                { assert snapshot(path("$outputDir/DeNovoIdentification/genomad/endtoend/").list()).match("genomad_end_to_end") }
            )
        }
    }
}
