nextflow_workflow {

    name "Test Subworkflow: FASTA_PHAGE_HOST_IPHOP"
    script "subworkflows/local/fasta_phage_host_iphop/main.nf"
    workflow "FASTA_PHAGE_HOST_IPHOP"
    tag "subworkflows"
    tag "subworkflows_local"
    tag "fasta_phage_host_iphop"
    tag "fasta_phage_host_iphop_default"


    test("Parameters: default") {

        when {
            params {
                outdir              = "$outputDir"
                iphop_test_db       = true
            }
            workflow {
                """
                input[0] = Channel.of([ [ id:'test' ], [ file(params.test_data['bacteroides_fragilis']['genome']['genome_fna_gz'], checkIfExists: true) ] ])
                input[1] = null
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert snapshot(workflow.out).match() }
            )
        }
    }
}
