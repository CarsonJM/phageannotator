nextflow_pipeline {

    name "Test Workflow main.nf"
    script "main.nf"
    tag "workflows"
    tag "phageannotator"
    tag "phageannotator_skip_reference"


    test("Parameters: --skip-reference-containment") {

        when {
            params {
                outdir                      = "$outputDir"
                skip_reference_containment  = true
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert snapshot(workflow.out).match() }
            )
        }

        cleanup {
                path("$workDir").deleteDir()
        }
    }
}
