nextflow_process {

    name "Test process: QUALITY_FILTER_VIRUSES"
    script "modules/local/quality_filter_viruses/main.nf"
    process "QUALITY_FILTER_VIRUSES"
    tag "modules"
    tag "modules_local"
    tag "quality_filter_viruses"


    test("Should run without failures") {

        when {
            params {
                outdir   = "$outputDir"
            }

            process {
                """
                input[0] = [ [ id: 'test' ], [ file(params.test_data['modules_local']['viruses_fna_gz'], checkIfExists: true) ],
                            [ file(params.test_data['modules_local']['proviruses_fna_gz'], checkIfExists: true) ],
                            [ file(params.test_data['modules_local']['quality_summary_tsv'], checkIfExists: true)] ]
                """
            }
        }

        then {
            assertAll (
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
