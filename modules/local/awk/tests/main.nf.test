nextflow_process {

    name "Test Process: AWK"
    script "modules/local/awk/main.nf"
    process "AWK"
    tag "modules_local"
    tag "awk"


    test("Test AWK") {

        when {
            params {
                outdir   = "$outputDir"
            }
            process {
                """
                input[0] = [ [ id: 'test' ], [ file(params.test_data['modules_local']['mash_screen_results_tsv'], checkIfExists: true) ] ]
                """
            }
        }

        then {
            assertAll (
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
