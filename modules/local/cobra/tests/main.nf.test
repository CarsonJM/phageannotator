nextflow_process {

    name "Test process: COBRA"
    script "../main.nf"
    process "COBRA"
    tag "modules"
    tag "modules_local"
    tag "cobra"


    test("contigs.fasta.gz & coverage.tsv & viral_contigs & bam") {

        when {
            params {
                outdir   = "$outputDir"
            }
            process {
                """
                input[0] = Channel.of(
                    [
                        [ id:'test' ],
                        file(params.modules_testdata_base_path + "genomics/sarscov2/illumina/fasta/contigs.fasta", checkifExists: true),
                        file("$projectDir/assets/test_data/subworkflows/fastq_fasta_contig_extension_cobra/test_coverage.tsv", checkifExists: true),
                        file("$projectDir/assets/test_data/subworkflows/fastq_fasta_contig_extension_cobra/viral_contigs.tsv", checkifExists: true),
                        file("$projectDir/assets/test_data/subworkflows/fastq_fasta_contig_extension_cobra/test.sorted.bam", checkifExists: true)
                        ]
                )
                input[1] = 'metaspades'
                input[2] = 27
                input[3] = 127
                """
            }
        }

        then {
            assertAll (
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("contigs.fasta.gz & coverage.tsv & viral_contigs & bam - stub") {

        options "-stub"

        when {
            params {
                outdir   = "$outputDir"
            }
            process {
                """
                input[0] = Channel.of(
                    [
                        [ id:'test' ],
                        file(params.modules_testdata_base_path + "genomics/sarscov2/illumina/fasta/contigs.fasta", checkifExists: true),
                        file("$projectDir/assets/test_data/subworkflows/fastq_fasta_contig_extension_cobra/test_coverage.tsv", checkifExists: true),
                        file("$projectDir/assets/test_data/subworkflows/fastq_fasta_contig_extension_cobra/viral_contigs.tsv", checkifExists: true),
                        file("$projectDir/assets/test_data/subworkflows/fastq_fasta_contig_extension_cobra/test.sorted.bam", checkifExists: true)
                        ]
                )
                input[1] = 'metaspades'
                input[2] = 27
                input[3] = 127
                """
            }
        }

        then {
            assertAll (
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
