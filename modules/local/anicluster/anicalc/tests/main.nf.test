nextflow_process {

    name "Test process: ANICLUSTER_ANICALC"
    script "modules/local/anicluster/anicalc/main.nf"
    process "ANICLUSTER_ANICALC"
    tag "modules"
    tag "modules_local"
    tag "anicluster"
    tag "anicluster_anicalc"


    test("Should run without failures") {

        when {
            params {
                outdir   = "$outputDir"
            }
            process {
                """
                input[0] = [ [ id: 'test' ], [ file(params.test_data['modules_local']['blast_txt'], checkIfExists: true) ] ]
                """
            }
        }

        then {
            assertAll (
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
