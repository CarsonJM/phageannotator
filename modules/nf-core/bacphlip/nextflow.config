process {
    withName: BACPHLIP {
        publishDir = [
            [
                path: { "${params.outdir}/VirusLifestyle/bacphlip" },
                mode: params.publish_dir_mode,
                pattern: '*.bacphlip',
            ]
        ]
        ext.args = params.bacphlip_args ? params.bacphlip_args : ""
    }
}