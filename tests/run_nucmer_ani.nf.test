nextflow_pipeline {

    name "Test pipeline: NFCORE_PHAGEANNOTATOR"
    script "main.nf"
    tag "PIPELINE"


    test("run_nucmer_ani = true") {
        when {
            params {
                input           = "$projectDir/assets/test-datasets/samplesheets/two_samples_no_reads.csv"
                outdir          = "$outputDir"
                run_nucmer_ani  = true
                max_cpus        = 4
                max_memory      = '15.GB'
                max_time        = '6.h'
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert snapshot(
                    path("${params.outdir}/ANICalculation/nucmer/")
                    ).match() },
                { assert new File("$outputDir/multiqc/multiqc_report.html").exists() }
            )
        }
    }
}
